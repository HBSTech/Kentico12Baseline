@using Models.InlineEditors
@model Generic.ViewModels.ImageWidgetViewModel

@if (Context.Kentico().PageBuilder().EditMode)
{
    Html.RenderPartial("InlineEditors/_ImageUploaderEditor", new ImageUploaderEditorViewModel
    {
        PropertyName = nameof(ImageWidgetProperties.ImageGuid),
        HasImage = Model.ImageGuid != null,
    });
}
<img src="@Url.Content(Model.ImageUrl)" alt="@Model.Alt" class="@Model.CssClass"/>
